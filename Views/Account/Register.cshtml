@model The_project.model.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<style>
    .register h1 {
        text-align: center;
        color: white;
        font-weight: bold;
    }

    section .row {
        display: flex;
        justify-content: center;
    }

    .col-md-4 {
        border: 1px solid #0d6efd;
        padding: 15px;
        border-radius: 15px;
        background: black;
    }

    label.control-label {
        font-weight: bold;
        color: white;
    }

    input[type="text"], input[type="email"], input[type="password"] {
        background: white;
        color: black;
        margin-bottom: 10px;
        outline: none;
        border-color: black;
    }

    .form-control:focus {
        color: black;
        background-color: white;
        border-color: #0d6efd;
        outline: none;
        box-shadow: 0 0 0 0;
    }

    input.btn.btn-primary {
        width: 100%;     
        margin: -10px 0px 10px;
    }
    .bottom p{
        text-align: center;
        color: white;
        margin-bottom: 0px;
    }

    a.login {
        color: green;
        font-weight: bold;
    }
</style>
<section class="register">
    <h1>Register</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="firstName" class="control-label"></label>
                    <input asp-for="firstName" class="form-control" />
                    <span asp-validation-for="firstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lastName" class="control-label"></label>
                    <input asp-for="lastName" class="form-control" />
                    <span asp-validation-for="lastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirmation" class="control-label"></label>
                    <input asp-for="PasswordConfirmation" type="password" class="form-control" />
                    <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <div class="bottom">
                        <input type="submit" value="Register" class="btn btn-primary" />
                        <p>Already have an Acouunt? <a class="login" href="/Account/Login">Login</a></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
